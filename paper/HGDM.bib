@article{callaghanComputingWaterFlow2019,
  title = {Computing Water Flow through Complex Landscapes \textendash{} {{Part}} 1: {{Incorporating}} Depressions in Flow Routing Using {{FlowFill}}},
  shorttitle = {Computing Water Flow through Complex Landscapes \textendash{} {{Part}} 1},
  author = {Callaghan, Kerry L. and Wickert, Andrew D.},
  year = {2019},
