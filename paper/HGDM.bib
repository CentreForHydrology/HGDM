@article{hayashiSimpleEquationsRepresent2000,
  title = {Simple Equations to Represent the Volume-Area-Depth Relations of Shallow Wetlands in Small Topographic Depressions},
  author = {Hayashi, M and {van der Kamp}, G},
  year = {2000},
  month = oct,
  journal = {Journal of Hydrology},
  volume = {237},
